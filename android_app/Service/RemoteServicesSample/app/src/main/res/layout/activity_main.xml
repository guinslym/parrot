<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.zpcat.remoteservicessample.app.MainActivity">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Space
        android:layout_width="fill_parent"
        android:layout_height="10sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bind_remote"
            android:text="Bind Remote"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="UnBind Remote"
            android:id="@+id/unbind_remote"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remote Message"
        android:id="@+id/remote_msg"
        android:textSize="30sp"/>
    
    <Space
        android:layout_width="fill_parent"
        android:layout_height="40sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Bind Messenger"
            android:id="@+id/bind_messenger"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="UnBind Messenger"
            android:id="@+id/unbind_messenger"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messager msg"
        android:id="@+id/messenger_msg"
        android:textSize="30sp"/>

</LinearLayout>
